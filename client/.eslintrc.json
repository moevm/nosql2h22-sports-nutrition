{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "parser": "@typescript-eslint/parser",
    "project": ["./tsconfig.json"]
  },
  "plugins": ["react"],
  "rules": {
    "no-unused-vars": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".tsx"]
      }
    ],
    "max-len": ["error", 120]
  },
  "settings": {
    "import/resolver": {
      //            "webpack": {
      //                "config": "webpack/resolve.js"
      //            },
      "node": {
        "extensions": [".ts", ".js", ".tsx", ".jsx", ".json"]
      }
    }
  }
}
