{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    //  "jsx": "react-jsx",
    "lib": ["es2017", "dom", "esnext"],
    "allowJs": false
  },
  "include": [
    "./@types/**/*.d.ts",
    "./src/**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
